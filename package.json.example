{
  "name": "myapp",
  "version": "1.0.0",
  "description": "Rails 8 application with modern frontend stack",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "npm run build:turbo && npm run build:react && npm run build:css",
    "build:turbo": "esbuild web/app/javascript/turbo_application.ts --bundle --sourcemap --format=esm --outfile=web/app/assets/builds/application.js --public-path=/assets",
    "build:react": "esbuild web/app/javascript/react_application.tsx --bundle --sourcemap --format=esm --outfile=web/app/assets/builds/react.js --public-path=/assets",
    "build:css": "tailwindcss -i ./web/app/assets/stylesheets/application.css -o ./web/app/assets/builds/application.css --minify",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'web/app/javascript/**/*.{js,jsx,ts,tsx}'",
    "lint:css": "prettier --check 'web/app/assets/stylesheets/**/*.css'",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint 'web/app/javascript/**/*.{js,jsx,ts,tsx}' --fix",
    "lint:css:fix": "prettier --write 'web/app/assets/stylesheets/**/*.css'",
    "format": "prettier --write 'web/app/javascript/**/*.{js,jsx,ts,tsx,json}' 'web/app/assets/stylesheets/**/*.css'",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "rails",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
