-# Example HAML view with Tailwind CSS
.min-h-screen.bg-gray-50
  -# Header
  .bg-white.border-b.border-gray-200.px-4.sm:px-6.lg:px-8.py-6
    .max-w-7xl.mx-auto.flex.items-center.justify-between
      %h1.text-3xl.font-bold.text-gray-900
        = t('views.example_models.index.title')
      = link_to new_example_model_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' do
        = t('views.example_models.index.new')

  -# Main content
  .max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-8
    - if @example_models.any?
      .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6
        - @example_models.each do |example_model|
          .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-6.hover:shadow-md.transition-shadow
            .flex.items-start.justify-between
              .flex-1
                %h3.text-lg.font-semibold.text-gray-900.mb-2
                  = link_to example_model.name, example_model_path(example_model), class: 'hover:text-blue-600'
                %p.text-sm.text-gray-500.mb-4
                  = example_model.description.truncate(100)

                .flex.items-center.gap-2.mb-4
                  - case example_model.status
                  - when 'active'
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-green-100.text-green-800
                      = t("views.example_models.statuses.#{example_model.status}")
                  - when 'pending'
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-yellow-100.text-yellow-800
                      = t("views.example_models.statuses.#{example_model.status}")
                  - else
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800
                      = t("views.example_models.statuses.#{example_model.status}")

                %p.text-xs.text-gray-400
                  = t('views.common.created_at', time: time_ago_in_words(example_model.created_at))

              .ml-4.flex.flex-col.gap-2
                = link_to edit_example_model_path(example_model), class: 'text-sm text-blue-600 hover:text-blue-700' do
                  = t('views.common.edit')
                = button_to example_model_path(example_model), method: :delete, class: 'text-sm text-red-600 hover:text-red-700', data: { turbo_confirm: t('views.common.confirm_delete') } do
                  = t('views.common.delete')

      -# Pagination
      .mt-8.flex.justify-center
        = paginate @example_models, theme: 'tailwind'

    - else
      .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-12.text-center
        %p.text-gray-500.mb-4
          = t('views.example_models.index.empty')
        = link_to new_example_model_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700' do
          = t('views.example_models.index.create_first')
